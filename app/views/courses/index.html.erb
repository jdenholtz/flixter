<br />

<div class="col-10 offset-1">
  
  <h1 class="text-center">Learn something today</h1>
  <% @courses.each do |course| %>
    <br class="clr">
    <div class="booyah-box main-bkrnd">
      <h2 class="text-center course-titles white-box" id="solid-blk-txt">
        <%= link_to course.title, course_path(course) %></h2>

        <% if ! course.image.blank? %>
          <div class="col-10 offset-1">
            <%= image_tag course.image, class: 'img-fluid outline-photo' %>
          </div>
          <br />
        <% end %>

      <div class="row">
        <div class="col-sm-10 offset-1 col-12">
          <div class="row">
            <div class="col-sm-9 col-12 course-descriptions">
              <%= course.description %>
            </div>
            <div class="col-sm-3 col-12 text-center">
              <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large' %>
            </div>
          </div>
        </div>
      </div>


      <br />
    </div>
    <br class="clr">
  <% end %>
  

</div>